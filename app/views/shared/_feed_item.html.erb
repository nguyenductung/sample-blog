<li id="<%= feed_item.id %>">
  <div class="row">
    <aside class="span1">
      <%= link_to gravatar_for(feed_item.user, size: 52), feed_item.user %>
    </aside>
    <div class="span7">
      <span class="title">
        <a href=<%= entry_path(feed_item) %>><%= wrap(feed_item.title) %></a>
      </span>
      <span class="user">
        <a href=<%= user_path(feed_item.user) %>><%= feed_item.user.name %></a>
      </span>
      <span class="content"><%= wrap(feed_item.content) %></span>
      <span class="timestamp"><%= feed_item.created_at %>. 
        <a href=<%= entry_path(feed_item) %>><%= pluralize(feed_item.comments.count, "comment") %></a>.
      </span>
      <% if current_user?(feed_item.user) %>
      	 <%= link_to(edit_entry_path(feed_item)) do %>
           <div class="btn btn-mini">Edit</div>
         <% end %>                     
         <%= link_to(feed_item, method: :delete, data: { confirm: "Are you sure?" }, title: feed_item.content) do %>
           <div class="btn btn-mini">Delete</div>
         <% end %>
      <% end %>
    </div>
  </div>
</li>